        Choose = input()
        while True:
            
            if Choose == "1":
                USD = float(input("Amount to be converted: "))
                HKD = USD * USD_RATE
                print("HKD = ", HKD, "HKD")
                print()
                break
            elif Choose == "2":
                EURO = float(input("Amount to be converted: "))
                HKD = EURO * EURO_RATE
                print("HKD = ", HKD, "HKD")
                print()
                break
            elif Choose == "3":
                HKD = float(input("Amount to be converted: "))
                USD = HKD / USD_RATE
                print("USD = ", USD, "USD")
                print()
                break
            elif Choose == "4":
                HKD = float(input("Amount to be converted: "))
                EURO = HKD / EURO_RATE
                print("EURO = ", EURO, "EURO")
                print()
                break
            elif Choose == "5":
                print("")
                break

